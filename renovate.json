{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on monday"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "dev tooling dependencies"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions"
    },
    {
      "matchPackagePatterns": [
        "^eslint",
        "^@typescript-eslint",
        "^typescript",
        "^vitest"
      ],
      "groupName": "lint and test stack"
    }
  ]
}
