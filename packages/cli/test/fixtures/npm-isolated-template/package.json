{
  "name": "npm-isolated-fixture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "eslint-config-snapshotter": {
    "workspaceInput": {
      "mode": "manual",
      "workspaces": ["packages/ws-a", "packages/ws-b"]
    },
    "grouping": {
      "mode": "match",
      "groups": [{ "name": "default", "match": ["**/*"] }]
    },
    "sampling": {
      "maxFilesPerWorkspace": 8,
      "includeGlobs": ["**/*.ts"],
      "excludeGlobs": ["**/node_modules/**", "**/dist/**"],
      "hintGlobs": []
    }
  }
}
