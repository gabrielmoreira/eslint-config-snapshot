{
  "name": "core",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/core",
        "command": "pnpm tsup src/index.ts --format esm,cjs --out-dir dist --clean"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/core",
        "command": "pnpm tsc -p tsconfig.json --noEmit"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/core",
        "command": "pnpm eslint ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/core",
        "command": "pnpm vitest run"
      }
    }
  }
}

